{
  "timeout": {
    "unit": 30000,
    "integration": 120000,
    "performance": 60000,
    "build": 60000
  },
  "thresholds": {
    "performance": {
      "frontmatterParse": 0.1,
      "fileOperation": 1000,
      "buildTime": 15000
    },
    "memory": {
      "maxIncrease": 52428800,
      "leakThreshold": 10485760
    }
  },
  "coverage": {
    "target": 80,
    "exclude": [
      "tests/",
      "tmp/",
      "test-data/",
      "dist/",
      "node_modules/"
    ]
  }
}